<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="140dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="668dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="500dp">

            <TextView
                android:id="@+id/main_saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:ems="1"
                android:text="S"
                app:layout_constraintBottom_toBottomOf="@+id/main_friday"
                app:layout_constraintEnd_toStartOf="@+id/main_sunday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/main_friday"
                app:layout_constraintTop_toTopOf="@+id/main_friday" />

            <TextView
                android:id="@+id/main_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:ems="1"
                android:text="M"
                app:layout_constraintBottom_toBottomOf="@+id/main_time"
                app:layout_constraintEnd_toStartOf="@+id/main_tuesday"
                app:layout_constraintHorizontal_bias="0.35"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/main_time"
                app:layout_constraintTop_toTopOf="@+id/main_time" />

            <TextView
                android:id="@+id/main_thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:ems="1"
                android:text="D"
                app:layout_constraintBottom_toBottomOf="@+id/main_wednesday"
                app:layout_constraintEnd_toStartOf="@+id/main_friday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/main_wednesday"
                app:layout_constraintTop_toTopOf="@+id/main_wednesday" />

            <TextView
                android:id="@+id/main_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:ems="1"
                android:text="S"
                app:layout_constraintBottom_toBottomOf="@+id/main_saturday"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/main_saturday"
                app:layout_constraintTop_toTopOf="@+id/main_saturday" />

            <TextView
                android:id="@+id/main_friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:ems="1"
                android:text="F"
                app:layout_constraintBottom_toBottomOf="@+id/main_thursday"
                app:layout_constraintEnd_toStartOf="@+id/main_saturday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/main_thursday"
                app:layout_constraintTop_toTopOf="@+id/main_thursday" />

            <TextView
                android:id="@+id/main_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:ems="1"
                android:text="D"
                app:layout_constraintBottom_toBottomOf="@+id/main_monday"
                app:layout_constraintEnd_toStartOf="@+id/main_wednesday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/main_monday"
                app:layout_constraintTop_toTopOf="@+id/main_monday" />

            <TextView
                android:id="@+id/main_wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:ems="1"
                android:text="M"
                app:layout_constraintBottom_toBottomOf="@+id/main_tuesday"
                app:layout_constraintEnd_toStartOf="@+id/main_thursday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/main_tuesday"
                app:layout_constraintTop_toTopOf="@+id/main_tuesday" />

            <Switch
                android:id="@+id/main_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/main_sunday"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/main_sunday"
                app:layout_constraintTop_toTopOf="@+id/main_sunday" />

            <TextView
                android:id="@+id/main_time"
                android:layout_width="67dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:ems="5"
                android:inputType="time"
                android:text="08:00"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.017" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/editImageButtonAM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_monday"
                app:layout_constraintVertical_bias="0.18"
                app:srcCompat="@android:drawable/ic_input_add" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>